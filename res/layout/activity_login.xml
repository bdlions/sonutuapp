<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/centralLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/signIn"
            android:textSize="30sp" />

        <!-- <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" >
            <requestFocus />
        </EditText>-->
        <EditText
                android:id="@+id/txtInpEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/backwithborder"
                android:hint="@string/label_email"
                android:singleLine="true" />
        
         <!-- Password Label -->
            <EditText
                android:id="@+id/txtInpPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:background="@drawable/backwithborder"
                android:hint="@string/label_password"
                android:inputType="textPassword"
                android:singleLine="true" />

        <!-- Login button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/button"
                android:text="@string/button_text_login" 
                />
            <!-- Link to Registration Screen -->

            <Button
                android:id="@+id/link_to_forgot_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="40dip"
                android:autoLink="web"
                android:gravity="center"
                android:text="@string/forgot_password_text"
                android:textColor="#00acea"
                android:background="#ffffff"
                android:textSize="20sp" />
            <!-- Link to Registration Screen -->

            <Button
                android:id="@+id/link_to_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="@string/register_account_text"
                android:textColor="#00acea"
                android:background="#ffffff"
                android:onClick="newAccount"
                android:textSize="20sp" />
        
    </LinearLayout>

</ScrollView>