    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/userNametextView"
                android:background="@drawable/gear" />

            <TextView
                android:id="@+id/userProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/userProfileName"
                android:layout_below="@+id/userProfileName"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="IT Professional"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userProfession"
                android:layout_below="@+id/userProfession"
                android:layout_marginTop="10dp"
                android:text="Bangladesh, Dhaka"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userAddress"
                android:layout_alignRight="@+id/userAddress"
                android:layout_below="@+id/userAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:text="Edit Profile"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/userProfileImage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/userProfileImage"
                android:text="Tanveer Ahmed Mizan"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

