            <ImageView
                android:id="@+id/myInfoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:src="@drawable/my_info" />

            <ImageView
                android:id="@+id/myPhotosImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/my_photo" />

            <ImageView
                android:id="@+id/myFollowingsImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/my_followers" />

        </LinearLayout>


        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border" >

        <ImageView
            android:id="@+id/imageOfUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/EmptyString"
            android:src="@drawable/followers" />

        <TextView
            android:id="@+id/textViewNameOfUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imageOfUser"
            android:fontFamily="Bold"
            android:text="Tanveer Ahmed"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewpostedStatusTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNameOfUser"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/imageOfUser"
            android:text="40 minites age"
            android:textColor="#9B9EA3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageOfUser"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:text="Good morning. this is my first status in mobile apps"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textViewTotalLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:fontFamily="Bold"
            android:text="15782 Likes"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTotalcomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/textViewTotalLike"
            android:text="56989 Comments"
            android:textColor="#9B9EA3"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/llCommentLikeShareSection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:background="@drawable/border_for_linear_layout"
            android:layout_marginTop="30dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLike"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/right_border"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/likeStatusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/EmptyString"
                    android:src="@drawable/like" />

                <TextView
                    android:id="@+id/newsfeedLikeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="Bold"
                    android:text="@string/newsfeed_like"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llComment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/right_border"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/commentStatusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/EmptyString"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/newsfeedCommentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="Bold"
                    android:text="@string/newsfeed_comment"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llShare"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.3"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/shareStatusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="3dp"
                    android:contentDescription="@string/EmptyString"
                    android:src="@drawable/share" />

                <TextView
                    android:id="@+id/newsfeedShareText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="Bold"
                    android:text="@string/newsfeed_share"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/EmptyString"
            android:src="@drawable/cross" />
    </RelativeLayout>
    </LinearLayout>

</ScrollView>