<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="." >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/setting__profile_box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
             >

            <!-- member_setting_birthday_title Label -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="@string/seettings_account_information_title"
                android:textColor="#00acea"
                android:textAppearance="?android:attr/textAppearanceLarge" />
				
            <!-- Here is the general  -->
            	<LinearLayout 
            	    android:id="@+id/LinearLayout01" 
            	    android:layout_width="fill_parent"
            	    android:layout_marginBottom="10dip"
				    android:layout_height="fill_parent">
				    
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/nametextViewTitle"
				        android:layout_height="wrap_content" 
				        android:text="Name: "
				        android:textColor="#00acea"
				        android:gravity="" 
				        android:layout_weight="1" />
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/userNametextView"
				        android:layout_height="wrap_content" 
				        android:text="Nazmul Hasan"
				        android:gravity="" 
				        android:layout_weight="2">
				    </TextView>
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/editUserName"
				        android:layout_height="wrap_content" 
				        android:text="Edit"
				        android:textColor="#00acea"
				        android:gravity="center" 
				        android:layout_weight="1">
				    </TextView>
				    
				</LinearLayout>
				
            	<LinearLayout 
            	    android:id="@+id/LinearLayout013" 
            	    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_marginBottom="10dip">
            	
            	<TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/emailtextViewTitle"
				        android:layout_height="wrap_content" 
				        android:text="Email: "
				        android:textColor="#00acea"
				        android:gravity="" 
				        android:layout_weight="1" />
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/UserEmailtextView"
				        android:layout_height="wrap_content" 
				        android:text="Omar@yahoo.com"
				        android:gravity="" 
				        android:layout_weight="2">
				    </TextView>
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/editUserEmail"
				        android:layout_height="wrap_content" 
				        android:text="Edit"
				        android:textColor="#00acea"
				        android:gravity="center" 
				        android:layout_weight="1">
				    </TextView>
         		</LinearLayout>
         		
            	
            	<LinearLayout 
            	    android:id="@+id/LinearLayout017" 
            	    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_marginBottom="10dip">
            	
            	<TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/passwordtextViewTitle"
				        android:layout_height="wrap_content" 
				        android:text="Password: "
				        android:textColor="#00acea"
				        android:gravity="" 
				        android:layout_weight="1" />
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/UserPasswordtextView"
				        android:layout_height="wrap_content" 
				        android:text="*********"
				        android:gravity="" 
				        android:layout_weight="2">
				    </TextView>
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/editUserPass"
				        android:layout_height="wrap_content" 
				        android:text="Edit"
				        android:textColor="#00acea"
				        android:gravity="center" 
				        android:layout_weight="1">
				    </TextView>
         		</LinearLayout>
         		
            	<LinearLayout 
            	    android:id="@+id/LinearLayout0166" 
            	    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_marginBottom="10dip">
            	
            	<TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/langtextViewTitle"
				        android:layout_height="wrap_content" 
				        android:text="Language: "
				        android:textColor="#00acea"
				        android:gravity="" 
				        android:layout_weight="1" />
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/userLangtextView"
				        android:layout_height="wrap_content" 
				        android:text="English(UK)"
				        android:gravity="" 
				        android:layout_weight="2">
				    </TextView>
				    <TextView 
				        android:layout_width="wrap_content" 
				        android:id="@+id/editUserLanguage"
				        android:layout_height="wrap_content" 
				        android:text="Edit"
				        android:textColor="#00acea"
				        android:gravity="center" 
				        android:layout_weight="1">
				    </TextView>
         		</LinearLayout>
           
        </LinearLayout>
    </LinearLayout>

</ScrollView>