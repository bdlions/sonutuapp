<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="." >

<FrameLayout
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/member_reg_box1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip"
             >

            <TextView
                android:id="@+id/txtViewRegStep1H1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="@string/member_reg_Title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#00acea" />

            <TextView
                android:id="@+id/txtViewRegStep1H2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="@string/reg_Title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/regFnameInputEdtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/backwithborder"
                android:hint="@string/reg_first_name"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="#0a000a"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/regLnameInputEdtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/backwithborder"
                android:hint="@string/reg_last_name"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="#0a000a"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnRegContinue1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="60dip"
                android:background="@drawable/button"
                android:text="@string/button_text_member_reg"
                android:textColor="#fff1ff"
                android:onClick="regStep1"
                android:textSize="15sp" />
            <Button
                android:id="@+id/link_to_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:onClick="backLogin"
                android:text="@string/sign_in_text"
                android:textColor="#7f7f7f"
                android:background="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/member_reg_box2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip">

            <TextView
                android:id="@+id/txtViewRegStep2H1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="@string/member_reg_Title_for_password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#00acea" />

            <TextView
                android:id="@+id/txtViewRegStep2H2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="@string/reg_pass_text"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/regPassInputEdtTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/backwithborder"
                android:hint="@string/reg_password"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="#0a000a"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnRegContinue2"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/button"
                android:text="@string/button_text_member_reg"
                android:textColor="#fff1ff"
                android:onClick="regStep2"
                android:textSize="15sp" />
            
            <Button
                android:id="@+id/link_to_register1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="@string/sign_in_text"
                android:textColor="#7f7f7f"
                android:background="#ffffff"
                android:onClick="backLogin"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/member_reg_box3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                 >

                <TextView
                    android:id="@+id/txtViewRegStep3H1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="30dip"
                    android:gravity="center"
                    android:text="@string/member_reg_Title_for_email"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#00acea" />

                <TextView
                    android:id="@+id/txtViewRegStep3H2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center"
                    android:text="@string/reg_email_text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/regEmailInputEdtTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="40dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/backwithborder"
                    android:hint="@string/reg_email"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="#0a000a"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnRegContinue3"
                    android:layout_width="fill_parent"
                    android:layout_height="34dp"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="60dip"
                    android:background="@drawable/button"
                    android:text="@string/button_text_member_reg"
                    android:textColor="#fff1ff"
                    android:onClick="regStep3"
                    android:textSize="15sp" />

            <Button
                android:id="@+id/link_to_register2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="@string/sign_in_text"
                android:textColor="#7f7f7f"
                android:onClick="backLogin"
                android:textSize="15sp" 
                android:background="#ffffff"
                />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
</ScrollView>