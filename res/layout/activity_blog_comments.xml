<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/commentListViewForBlog"
        android:layout_width="match_parent"
        android:layout_height="150dp" >
    </ListView>

    <EditText
        android:id="@+id/blogCommentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="@string/comment_hint"
        android:inputType="textMultiLine" >
    </EditText>

    
    <LinearLayout
        android:id="@+id/ll_radio_for_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
       <!-- <TextView
            android:id="@+id/commentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Comment Nature :"
            android:textSize="18sp" />-->
        
        <RadioGroup
            android:id="@+id/myRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:checkedButton="@+id/sound" >

            <RadioButton
                android:id="@+id/positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/positive" />

            <RadioButton
                android:id="@+id/negitive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/negitive" />

            <RadioButton
                android:id="@+id/neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/neutral" />
        </RadioGroup>
    </LinearLayout>


    <Button
        android:id="@+id/blogCommentPostBtn"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/button"
        android:text="@string/save_and_continue"
        android:textColor="#fff1ff"
        android:textSize="15sp" />

</LinearLayout>