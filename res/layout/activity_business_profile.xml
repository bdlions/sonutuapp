                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewBTotalLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBDescription"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="Bold"
                android:text="15782 Likes"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewBTotalcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBDescription"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/textViewBTotalLike"
                android:text="56989 Comments"
                android:textColor="#9B9EA3"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/bLLCommentLikeShareSection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBDescription"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_for_linear_layout"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/bLLLike"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/bLikeStatusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#FFFFFF"
                        android:contentDescription="@string/EmptyString"
                        android:src="@drawable/like_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bLLComment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/bCommentStatusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#FFFFFF"
                        android:contentDescription="@string/EmptyString"
                        android:src="@drawable/comment_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bLLShare"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/bShareStatusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#FFFFFF"
                        android:contentDescription="@string/EmptyString"
                        android:src="@drawable/share_icon" />

                </LinearLayout>
            </LinearLayout>

