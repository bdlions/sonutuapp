        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border" >

            <ImageView
                android:id="@+id/imageOfBusiness"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/EmptyString"
                android:src="@drawable/followers" />

            <TextView
                android:id="@+id/bNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageOfBusiness"
                android:fontFamily="Bold"
                android:text="Sampan Auto"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewpostedBStatusTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bNameTextView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/imageOfBusiness"
                android:text="40 minites age"
                android:textColor="#9B9EA3"
                android:textSize="12sp" />

            <TextView
