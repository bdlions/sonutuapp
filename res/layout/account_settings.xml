            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal" >

                <!-- settings_account College/Uni Label -->
                <TextView
                    android:id="@+id/txtClgUni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/settings_account_clg_uni_label"
                    android:textColor="#00acea" >
                </TextView>

                <EditText
                    android:id="@+id/editUserSCU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56px"
                android:orientation="horizontal" >

                <!-- settings_account employee Label -->
                <TextView
                    android:id="@+id/txtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/settings_account_emp_label"
                    android:textColor="#00acea" >
                </TextView>

                <EditText
                    android:id="@+id/editUserEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:gravity="center">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal" >

                <!-- settings_account Occupation Label -->
                <TextView
                    android:id="@+id/txtOccupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/settings_account_occupation_label"
                    android:textColor="#00acea" >
                </TextView>

                <EditText
                    android:id="@+id/editUserOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
					android:gravity="center">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:orientation="horizontal" >

                <!-- settings_account About Me Label -->
                <TextView
                    android:id="@+id/txtAboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:text="@string/settings_account_aboutme_label"
                    android:textColor="#00acea" >
                </TextView>

                <EditText
                    android:id="@+id/editUserAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
					android:gravity="center">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <!-- Ok button -->
            <Button
                android:id="@+id/btnok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/button"
                android:text="@string/settings_account_ok_btn" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>