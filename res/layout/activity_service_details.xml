<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="." >

    <LinearLayout
        android:id="@+id/service_details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/serviceDetailsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Vargin Active-Chiswick park"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/addressHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceDetailsAddressMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Dhaka,Uttara"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serviceDetailsAddressSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="69,Road-17,Sector-11"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serviceDetailsAddressPhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Mobile: + 8801725724068"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serviceDetailsAddressDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Distance : 1069.32 miles"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serviceDetailsAddressDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Details"
            android:textColor="#93D2FB"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </RelativeLayout>
        
        <Button
                android:id="@+id/ServiceDetailsBackBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="Back"
                android:textColor="#00acea"
                android:background="#ffffff"
                android:textSize="20sp" />
    </LinearLayout>

</ScrollView>