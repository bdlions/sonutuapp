        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/recipeCommentUserImg"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:background="@drawable/upload_img_icon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/userNameInRecipeComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/userRecipeComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="This is text comments"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/userRecipeCommentsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="8 mint ago"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>