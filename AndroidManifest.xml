<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportzweb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sportzweb.LoginActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sportzweb.MainActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.sportzweb.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.sportzweb.MemberSettingActivity"
            android:label="@string/title_activity_member_setting" >
        </activity>
        <activity
            android:name="com.sportzweb.GenderSelectionActivity"
            android:label="@string/title_activity_genger_selection" >
        </activity>
        <activity
            android:name="com.sportzweb.ProfileInformationActivity">
        </activity>
        <activity android:name="com.sportzweb.BirthDaySettingActivity"></activity>
        <activity android:name="com.sportzweb.AddProfilePictureActivity"></activity>
    </application>

</manifest>
